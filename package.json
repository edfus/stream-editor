{
  "name": "update-file-content",
  "version": "1.8.5",
  "description": "Utility for executing RegEx replacement on files, powered by stream.",
  "scripts": {
    "example": "node examples/update-sw-content.mjs",
    "example/npm": "node examples/update-package.json.mjs",
    "example/readme": "node examples/update-readme-tests.mjs",
    "pack": "node examples/pack.mjs",
    "test": "mocha",
    "test/regex": "mocha test/test-regex.mjs",
    "prepare": "npm run pack -- --version=false"
  },
  "files": [
    "README.md",
    "package.json",
    "build/index.d.ts",
    "build/index.js",
    "build/index.mjs",
    "build/streams.js",
    "build/streams.mjs",
    "build/transform.js",
    "build/transform.mjs",
    "build/rw-stream/index.js",
    "build/rw-stream/index.mjs"
  ],
  "main": "build/index.js",
  "module": "build/index.mjs",
  "exports": {
    ".": {
      "node": {
        "require": "./build/index.js",
        "import": "./build/index.mjs"
      },
      "default": "./build/index.mjs"
    },
    "./build/": "./build/"
  },
  "types": "build/index.d.ts",
  "author": "edfus",
  "keywords": [
    "stream",
    "regex",
    "text replace"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edfus/update-file-content.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^8.2.0"
  }
}
